{
  "sampling_interval_ms": 200,
  "deployment_mode": "system_wide",
  "feature_window_size": 100,
  "normalize_by_instructions": true,
  "use_robust_statistics": true,
  "baseline_samples_required": 200,
  "baseline_collection_minutes": 10,
  "use_trimmed_statistics": true,
  "trim_percentage": 0.1,
  "robust_z_threshold_medium": 3.0,
  "robust_z_threshold_high": 4.0,
  "robust_z_threshold_critical": 5.0,
  "alert_cooldown_seconds": 30,
  "ensemble_voting": true,
  "epsilon_mad": 1e-09,
  "idle_ipc_threshold": 0.2,
  "idle_required_intervals": 5,
  "idle_alert_skip": true,
  "log_wall_clock_timestamps": true,
  "feature_importance_tracking": true,
  "false_positive_monitoring": true,
  "cpu_governor_required": "performance",
  "perf_event_paranoid_max": 1,
  "log_system_info": true,
  "baseline_file": "baseline.json",
  "evaluation_log": "evaluation_results.json",
  "app_directory": ".",
  "baseline_directory": ".",
  "core_affinity": 0,
  "runs_per_app": 10,
  "min_samples_per_app": 5,
  "max_runtime_seconds": 60,
  "warmup_seconds": 2,
  "alert_output_file": "alerts.jsonl",
  "perf_events": [
    "cycles",
    "instructions",
    "branches",
    "branch-misses",
    "cache-references",
    "cache-misses",
    "L1-dcache-loads",
    "L1-dcache-load-misses",
    "iTLB-loads",
    "iTLB-load-misses",
    "dTLB-loads",
    "dTLB-load-misses",
    "cpu-clock"
  ]
}